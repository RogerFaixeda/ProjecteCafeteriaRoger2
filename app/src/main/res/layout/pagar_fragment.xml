<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.pagar.PagarFragment">


        <TextView
            android:id="@+id/textViewMenjarTitol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="57dp"
            android:layout_weight="1"
            android:text="Menjar: "
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textViewMenjarPreu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewMenjarPreu" />

        <TextView
            android:id="@+id/textViewMenjarPreu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="105dp"
            android:text="@string/_0"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewBegudaTitol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:text="Beguda: "
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textViewMenjarTitol"
            app:layout_constraintTop_toBottomOf="@+id/textViewMenjarTitol" />

        <TextView
            android:id="@+id/textViewBegudaPreu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/_0"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@+id/textViewMenjarPreu"
            app:layout_constraintTop_toBottomOf="@+id/textViewMenjarPreu" />

        <TextView
            android:id="@+id/textViewPostreTitol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_weight="1"
            android:text="Postre: "
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textViewBegudaTitol"
            app:layout_constraintTop_toBottomOf="@+id/textViewBegudaTitol" />

        <TextView
            android:id="@+id/textViewPostrePreu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="@string/_0"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@+id/textViewBegudaPreu"
            app:layout_constraintTop_toBottomOf="@+id/textViewBegudaPreu" />

        <TextView
            android:id="@+id/textViewPreuTitol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_weight="1"
            android:text="Total: "
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textViewPostreTitol"
            app:layout_constraintTop_toBottomOf="@+id/textViewPostreTitol" />

        <TextView
            android:id="@+id/textViewTotalPreu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="23dp"
            android:text="@string/_0"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@+id/textViewPostrePreu"
            app:layout_constraintTop_toBottomOf="@+id/textViewPostrePreu" />

        <Button
            android:id="@+id/buttonPagar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginTop="47dp"
            android:backgroundTint="@color/blue"
            android:elevation="4dp"
            android:padding="12dp"
            android:text="@string/pagar"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/textViewPreuTitol"
            app:layout_constraintTop_toBottomOf="@+id/textViewPreuTitol" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>